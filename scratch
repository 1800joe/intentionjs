var ctx = {
	base:{
		class:'base classes'
	},
	mobile: {
		class:"=touch:one",
		src:"ok.png",
		title:"small ok"
	},
	tablet: {
		class:"three two",
		src="ok2.png",
		title:"medium ok"
	},
	touchMobile: {
		class=">1.5:highrez"
	}
}

